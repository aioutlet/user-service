{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User management microservice for AIOutlet platform.",
  "main": "src/server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aioutlet/user-service.git"
  },
  "keywords": [
    "aioutlet",
    "microservice",
    "node",
    "express",
    "mongo"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aioutlet/user-service/issues"
  },
  "homepage": "https://github.com/aioutlet/user-service#readme",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node scripts/seed.js",
    "clear": "node scripts/clear.js",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:coverage": "jest --runInBand --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "node -r dotenv/config -e \"import('./src/config/index.js').then(() => console.log('âœ… Configuration valid'))\"",
    "docker:build": "docker build -t user-service:latest .",
    "docker:build:dev": "docker build --target development -t user-service:dev .",
    "docker:up": "./.ops/setup.sh",
    "docker:down": "./.ops/teardown.sh",
    "docker:logs": "docker-compose logs -f",
    "db:setup": "./.ops/db-manage.sh setup",
    "db:seed": "./.ops/db-manage.sh seed",
    "db:reset": "./.ops/db-manage.sh reset",
    "db:status": "./.ops/db-manage.sh status",
    "health": "curl -f http://localhost:${PORT:-3002}/health || echo 'Service not responding'"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "bcrypt": "^5.0.0",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "babel-jest": "^30.0.0",
    "eslint": "^9.12.0",
    "jest": "^29.0.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^2.0.0",
    "supertest": "^6.3.0"
  }
}
