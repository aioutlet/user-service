# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Test Database Configuration
MONGODB_CONNECTION_SCHEME=mongodb
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=test_user
MONGODB_PASSWORD=test_password
MONGODB_DB_NAME=user_service_test
MONGODB_DB_PARAMS=authSource=admin

# JWT Configuration for tests
JWT_SECRET=test_jwt_secret_minimum_32_characters_long_for_testing_only
JWT_EXPIRES_IN=24h

# External Service URLs (test mocks)
AUTH_SERVICE_URL=http://localhost:3001
AUDIT_SERVICE_URL=http://localhost:3007
NOTIFICATION_SERVICE_URL=http://localhost:3003

# Security
BCRYPT_ROUNDS=4

# Logging Configuration (minimal for tests)
LOG_LEVEL=error
LOG_TO_CONSOLE=false
LOG_TO_FILE=false

# Disable features for testing
OTEL_ENABLED=false
HEALTH_CHECK_ENABLED=false
HOT_RELOAD=false
DEBUG_MODE=false
ENABLE_SECURITY_HEADERS=false
ENABLE_RATE_LIMITING=false
ENABLE_COMPRESSION=false
ENABLE_CACHING=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
