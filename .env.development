# Development Environment Configuration for User Service
NODE_ENV=development
SERVICE_NAME=user-service
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_FILE=false
LOG_TO_CONSOLE=true
LOG_FILE_PATH=user-service.log

# Port configuration
PORT=3002

# Database configuration - PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/aioutlet_users_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aioutlet_users_dev
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-development
JWT_EXPIRES_IN=24h
JWT_ISSUER=ai-outlet-user-service
JWT_AUDIENCE=ai-outlet-clients

# Session configuration
SESSION_SECRET=your-session-secret-development

# CORS configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# External Services
AUTH_SERVICE_URL=http://localhost:4000
AUDIT_SERVICE_URL=http://localhost:3009
NOTIFICATION_SERVICE_URL=http://localhost:3008

# Redis configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=user:

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File upload configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Email configuration (for user verification)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ai-outlet.com
