# =============================================================================
# User Service - Development Environment Configuration
# =============================================================================
# Copy this content to .env file for local development
# This is the default development configuration

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0-dev

# =============================================================================
# Database Configuration
# =============================================================================
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Breaking down the URI parts:
# - Protocol: mongodb://
# - Username: appuser
# - Password: apppass123
# - Host: localhost (or IP address)
# - Port: 27017 (default MongoDB port)
# - Database: user_service_db
# - Options: ?authSource=admin (authentication database)
MONGODB_URI=mongodb://appuser:apppass123@localhost:27017/user_service_db?authSource=admin

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_this_in_production_minimum_32_characters_long
JWT_EXPIRES_IN=24h

# Password Security - Lower rounds for faster development
BCRYPT_ROUNDS=10

# =============================================================================
# External Services Configuration
# =============================================================================
# Development (using Docker service names)
AUDIT_SERVICE_URL=http://audit-service:3007
NOTIFICATION_SERVICE_URL=http://notification-service:3003

# =============================================================================
# CORS Configuration
# =============================================================================
# Permissive for development
CORS_ORIGIN=http://localhost:3000,http://localhost:3010,http://localhost:5173

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Relaxed for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# Security Features
# =============================================================================
# Relaxed for development
ENABLE_SECURITY_HEADERS=false
ENABLE_RATE_LIMITING=false
ENABLE_COMPRESSION=false
ENABLE_CACHING=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=logs/user-service-dev.log

# =============================================================================
# Observability Configuration  
# =============================================================================
# Tracing - Enabled for development
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Correlation ID
CORRELATION_ID_HEADER=x-correlation-id
