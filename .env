# User Service - Development Environment Template
# Copy this file to .env.development and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# MongoDB Configuration (current setup)
MONGODB_CONNECTION_SCHEME=mongodb
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=userservice
MONGODB_PASSWORD=user_mongo_dev_123
MONGODB_DB_NAME=user_service_dev
MONGODB_DB_PARAMS=authSource=admin

# Alternative: MongoDB connection string (overrides individual components if provided)
# MONGODB_URI=mongodb://userservice:user_mongo_dev_123@localhost:27017/user_service_dev?authSource=admin

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_this_in_production_minimum_32_characters_long
JWT_EXPIRES_IN=24h

# External Service URLs (development - using service names for Docker)
AUTH_SERVICE_URL=http://auth-service:3001
AUDIT_SERVICE_URL=http://audit-service:3007
NOTIFICATION_SERVICE_URL=http://notification-service:3003

# Password Security
BCRYPT_ROUNDS=10

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/user-service.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3010

# Rate Limiting (development - more permissive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# OpenTelemetry Configuration (optional)
OTEL_SERVICE_NAME=user-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development specific settings
HOT_RELOAD=true
DEBUG_MODE=true
