# User Service - Development Environment Template
# Copy this content to .env file for local development
# This is the default development configuration

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# MongoDB Configuration - Docker development setup (for local debugging from host)
MONGODB_CONNECTION_SCHEME=mongodb
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=prod_userservice
MONGODB_PASSWORD=secure_prod_mongo_123
MONGODB_DB_NAME=user_service_dev_db
MONGODB_DB_PARAMS=authSource=admin

# Alternative: MongoDB connection string (overrides individual components if provided)
# MONGODB_URI=mongodb://userservice:user_mongo_dev_123@mongo-user-service:27017/user_service_dev_db?authSource=admin

# JWT Configuration
JWT_SECRET=jwt_1234 # Testing for custom secret pattern
JWT_EXPIRES_IN=24h

# External Service URLs - Development (using Docker service names)
AUTH_SERVICE_URL=http://auth-service:3001
AUDIT_SERVICE_URL=http://audit-service:3007
NOTIFICATION_SERVICE_URL=http://notification-service:3003

# Password Security - Lower rounds for faster development
BCRYPT_ROUNDS=10

# Logging Configuration - Verbose for development
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/user-service.log

# CORS Configuration - Permissive for development
CORS_ORIGIN=http://localhost:3000,http://localhost:3010,http://localhost:5173

# Rate Limiting - Relaxed for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# OpenTelemetry Configuration - Optional for development
OTEL_SERVICE_NAME=user-service-dev
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_ENABLED=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development specific settings
HOT_RELOAD=true
DEBUG_MODE=true

# Security (relaxed for development)
ENABLE_SECURITY_HEADERS=false
ENABLE_RATE_LIMITING=false
ENABLE_COMPRESSION=false
ENABLE_CACHING=false
